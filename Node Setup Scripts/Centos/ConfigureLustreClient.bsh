#!/bin/bash

mkdir -p /var/mnt/lustre
mount -t lustre head@tcp:/lustre /var/mnt/lustre

mkdir -p /work
mkdir -p /project
mkdir -p /var/mnt/lustre/home
mkdir -p /var/mnt/lustre/work
